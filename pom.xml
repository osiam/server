<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.osiam</groupId>
    <artifactId>osiam-server-parent</artifactId>
    <version>2.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>OSIAM Server Parent</name>
    <description>
        OSIAM maven server parent project with the three modules auth-server, resource-server, and distribution
    </description>
    <url>https://github.com/osiam/server</url>
    <licenses>
        <license>
            <name>The MIT License (MIT)</name>
            <url>http://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>OSIAM Team</name>
            <email>info@osiam.org</email>
            <timezone>+1</timezone>
            <organization>tarent solutions GmbH</organization>
            <organizationUrl>http://www.tarent.de</organizationUrl>
        </developer>
    </developers>

    <modules>
        <module>auth-server</module>
        <module>resource-server</module>
        <module>distribution</module>
    </modules>

    <scm>
        <connection>scm:git://git@github.com/osiam/server.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/osiam/server.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>osiam-repository</id>
            <name>public evolvis release repository</name>
            <url>scpexe://maven-repo.evolvis.org:/var/www/maven_repo/releases</url>
        </repository>
        <snapshotRepository>
            <id>OSIAM-NG-SNAPSHOT-repository</id>
            <name>public evolvis release repository</name>
            <url>scpexe://maven-repo.evolvis.org:/var/www/maven_repo/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.7</java.version>

        <version.hibernate>4.3.9.Final</version.hibernate>
        <version.spring>5.2.7.RELEASE</version.spring>
        <version.thymeleaf>2.1.4.RELEASE</version.thymeleaf>
        <version.spring.security>3.2.7.RELEASE</version.spring.security>
        <version.aspectj>1.8.5</version.aspectj>
        <version.slf4j>1.7.12</version.slf4j>
        <version.metrics>3.0.2</version.metrics>
        <version.mysql.connector.java>5.1.35</version.mysql.connector.java>

        <sonar.core.codeCoveragePlugin>cobertura</sonar.core.codeCoveragePlugin>
        <!-- force sonar to reuse reports generated during build cycle -->
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
    </properties>

